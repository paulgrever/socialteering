<!DOCTYPE html>
<html>
<head>
  <title>Socialteering</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: "alert alert-#{name} text-center" %>
    <% end %>
  </div>

<%= yield %>

</body>
</html>


            <li>
              <time datetime=<%=@event.created_at.strftime("%Y-%m-%d")%>>
                <span class="day"><%=@event.event_date.day  %></span>
                <span class="month"><%=@event.month%></span>
                <span class="year">2015</span>
                <span class="time">2pm-5pm</span>
              </time>
              <%=image_tag @event.image_url  %>
              <div class="info">
                <h2 class="title"><%= @event.name %> </h2>
                <div>
                  <p class="desc hide-away"><%= @event.short_description %></p>
                </div>
                  <ul>
                  <li class="lister-width">
                    <a class: "hide-away" href=<%=@event.organization.website%>><span class="glyphicon glyphicon-tree-deciduous"></span>Organization Site</a>
                  </li>
                  <%unless @event.business_id.nil? %>
                   <li class="lister-width"> 
                      <a href=<%= @event.business.url %>><span class="glyphicon glyphicon-cutlery" aria-hidden="true"></span> <%= @event.business.name %></a>
                  </li>
                  <% end %>
                  <li clas="lister-width">
                    <a href=<%= event_path(@event) %>><span class="glyphicon glyphicon-bookmark"></span>Event Details</a>

                  </li>
                </ul>
              </div>
              <div class="social">
                <ul>
                  <li class="facebook lister-width"><a href=<%=@event.organization.facebook_url %>><span class="fa fa-facebook"></span></a></li>
                  <li class="twitter lister-width-1"><a href=<%=@event.organization.twitter_url  %>><span class="fa fa-twitter"></span></a></li>
                  <li class="google-plus lister-width"><a href=<%=@event.organization.google_plus_url  %>><span class="fa fa-google-plus"></span></a></li>
                </ul>
              </div>
            </li>

  <div class="row text-center">
    <h2><%= @organization.name %></h2>
    <h4>EIN: <%= @organization.ein %></h4>
    <h4>Primary Contact: <%= @organization.user.full_name %></h4>
  </div>
  <div class="row">
    <%= form_for(@organization) do |f| %>
    <div class="text-center col-md-offset-1 col-md-5 spacer">
      <h3>Contact Information</h3>
      <div class="form-group">
        <%= f.label "Organization Name"%>
        <%= f.text_field :name, class: "form-control", placeholder: "Official Name"%>
      </div>
      <div class="form-group">
        <%= f.label "Contact Information"%>
        <%= f.text_field :email, class: "form-control", placeholder: "Email address"%>
        <%= f.text_field :phone_number, class: "form-control", placeholder: "Phone number"%>
      </div>
      <div class="form-group">
        <%= f.label "Address"%>
        <%= f.text_field :address, class: "form-control", placeholder: "Street addresss"%>
        <%= f.text_field :city, class: "form-control", placeholder: "City"%>
        <%= f.text_field :state, class: "form-control", placeholder: "State"%>
        <%= f.text_field :zipcode, class: "form-control", placeholder: "Zipcode"%>
      </div>
    </div>
    <div class="text-center col-md-5 spacer">
      <h3>Descriptive Information</h3>
      <div class="form-group">
        <%= f.label "Organization Description"%>
        <%= f.text_area :description, class: "form-control", placeholder: "A short bio of your organization."%>
      </div>
      <div class="form-group">
        <%= f.label "Website"%>
        <%= f.text_field :website, class: "form-control", placeholder: "Website Url"%>
      </div>
      <h3>Social Information</h3>
      <div class="form-group">
        <%#= f.label "Facebook Page"%>
        <%= f.text_field :facebook_url, class: "form-control", placeholder: "Facebook"%>
      </div>
      <div class="form-group">
        <%#= f.label "Twitter Page"%>
        <%= f.text_field :twitter_url, class: "form-control", placeholder: "Twitter"%>
      </div>
      <div class="form-group">
        <%#= f.label "Google Plus Page"%>
        <%= f.text_field :google_plus_url, class: "form-control", placeholder: "Google Plus"%>
      </div>
    </div>
  </div>
  <div class="row text-center">
    <%= f.submit "Update Information", class: "btn btn-landing btn-lg" %>
  </div>
  <% end %>
  
</div>

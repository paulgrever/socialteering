<div class="container-fluid">
  <div class="top">
    <h1 class="text-center">Business Search Results:</h1>
  </div>

  <div class="row">
    <% if @businesses.count == 0  %>
        <div class="col-lg-12">
          <h1 class="notice text-center">Your search did not produce any results, please refine and search again</h1>
        </div>
    <% else %>
      <div class="col-lg-9">
        <ul class="event-list">
        <% @businesses.each do |business| %>
        <%= binding.pry %>
        <li>
          <%=image_tag  business.image_url %>
          <%=image_tag  business.snippet_image_url %>
          <div class="info">
                <h2 class="title"><%= link_to business.name, business.url %> (<%= business.distance.round %> meters away)</h2>
                <p class="desc"><%= business.snippet_text %></p>
                <p class="text-center"><%= image_tag "yelp_logo.png" %> : <%= image_tag business.rating_img_url_small  %>   </p>
                  <ul>
                  <li style="width:50%;"><a href="http://www.unitedwaynca.org/"><span class="glyphicon glyphicon-earphone"></span><%= business.display_phone%></a></li>
                   <li style="width:50%;"><a href="http://www.sixthengine.com"/><span class="glyphicon glyphicon-cutlery" aria-hidden="true"></span> Sixth Engine</a></li>
                </ul>
              </div>
            </li>
        <% end %>
        </ul>
      </div> 
    <% end %>
  </div>

    <div class="text-center">
      <%= link_to "Search Again", :back, class: "btn btn-lg btn-landing" %>
    </div>
</div>
